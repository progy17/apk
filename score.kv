<CustomButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ""
    canvas.before:
        Color:
            rgba: (132/255, 83/255, 140/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [43]
